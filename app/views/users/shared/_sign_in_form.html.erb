<%= form_for(:session, url: {controller: "users/sessions", action: "new"}) do |f| %>
  <div class="field">
    <%= f.label :email, class: "email_label" %>
    <%= f.email_field :email, autofocus: true, class: "email_field" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", class: "pass_field" %>
  </div>

  <% if Devise.mappings[:user].rememberable? -%>
    <div class="field remember_me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>